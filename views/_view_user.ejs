<div
  class="flex items-center justify-center bg-white dark:bg-slate-800 h-screen w-full"
>
    <div class="flex items-center justify-center z-50">
      <div class="relative px-4 w-full max-w-2xl h-full md:h-auto">
        <div
          class="relative bg-white rounded-lg border border-dotted border-slate-700 shadow-2xl dark:bg-gray-700"
        >
          <div
            class="flex justify-between items-start p-5 rounded-t border-b border-gray-400 dark:border-gray-600"
          >
            <h3
              class="flex items-center text-xl font-semibold p-1.5 text-gray-900 lg:text-2xl dark:text-white"
            >
              Profile
            </h3>
            <a
              href="/"
              class="flex items-center space-x-2 p-1.5 ml-auto rounded-b border-gray-200 dark:border-gray-600"
            >
              <button
                type="button"
                class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800"
              >
                GO BACK
              </button>
            </a>
          </div>

          <div class="p-6 space-y-6">
            <div
              class="w-72 sm:w-72 md:w-80 lg:w-96 mx-auto text-center border border-dotted border-slate-700 dark:border-gray-300 font-IBM shadow-2xl"
            >
              <div
                class="flex items-center justify-center mt-4"
                alt="John Doe Picture"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="w-32 h-32 text-black p-2 border-2 border-gray-900 dark:border-slate-400 bg-gray-300 dark:bg-slate-700 dark:text-slate-300 rounded-full"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
                  />
                </svg>
              </div>

              <div class="items-center justify-center mx-auto my-5">
                <h1
                  class="text-center font-bold text-[25px] sm:text-2xl md:text-4xl lg:text-5xl dark:text-slate-200"
                >
                  <%= user.name %>
                </h1>
                <p
                  class="text-center font-medium text-sm sm:text-lg md:text-lg lg:text-xl mt-3 dark:text-gray-400"
                >
                  <%= user.job_profile %>
                </p>
                <p
                  class="text-center font-medium text-sm sm:text-lg md:text-lg lg:text-xl mt-3 dark:text-gray-400"
                >
                  <%= user.email %>
                </p>
                <p
                  class="text-center font-medium text-sm sm:text-lg md:text-lg lg:text-xl mt-3 dark:text-gray-400"
                >
                  <%= user.mobile %>
                </p>
              </div>
            </div>
          </div>

          <div
            class="flex items-center p-6 space-x-2 rounded-b border-t border-gray-400 dark:border-gray-600"
          ></div>
        </div>
      </div>
    </div>
</div>
