<header
  class="text-gray-600 bg-neutral-300 body-font dark:bg-gray-700 dark:text-slate-200"
>
  <div
    class="container mx-auto flex flex-wrap p-5 flex-col md:flex-row items-center"
  >
    <a
      href="/"
      class="flex title-font font-medium items-center cursor-pointer text-gray-900 mb-4 md:mb-0"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        stroke="currentColor"
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="1.8"
        class="w-12 h-12 text-white p-2 border-2 border-indigo-900 dark:border-slate-400 bg-indigo-500 dark:bg-slate-800 dark:text-slate-300 rounded-full"
        viewBox="0 0 24 24"
      >
        <path
          d="M10 6H5a2 2 0 00-2 2v9a2 2 0 002 2h14a2 2 0 002-2V8a2 2 0 00-2-2h-5m-4 0V5a2 2 0 114 0v1m-4 0a2 2 0 104 0m-5 8a2 2 0 100-4 2 2 0 000 4zm0 0c1.306 0 2.417.835 2.83 2M9 14a3.001 3.001 0 00-2.83 2M15 11h3m-3 4h2"
        />
      </svg>

      <span
        class="ml-4 text-3xl text-slate-700 font-bold font-IBM dark:text-slate-100"
        >CRUD APP</span
      >
    </a>
    <nav
      class="md:ml-auto flex flex-wrap items-center text-base justify-center cursor-pointer"
    >
      <a
        href="/about"
        class="mr-8 text-lg font-serif tracking-wide text-slate-500 hover:text-black dark:text-slate-400 dark:hover:text-blue-500"
        >About me</a
      >
      <div class="flex justify-center items-center transition">
        <input
          type="checkbox"
          class="opacity-0 absolute"
          id="checkbox"
          onclick="toggleTheme()"
        />
        <label
          for="checkbox"
          class="w-[50px] h-[25px] flex cursor-pointer bg-gray-900 dark:bg-gray-600 rounded-[50px] items-center justify-between p-[5px] relative transform scale-[1.5]"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            id="theme-toggle-dark-icon"
            class="h-5 w-5 text-yellow-400"
            viewBox="0 0 20 20"
            fill="currentColor"
          >
            <path
              fill-rule="evenodd"
              d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z"
              clip-rule="evenodd"
            />
          </svg>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            id="theme-toggle-light-icon"
            class="h-5 w-5 text-pink-500"
            viewBox="0 0 20 20"
            fill="currentColor"
          >
            <path
              d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"
            />
          </svg>
  
          <div
            class="toggle-ball w-[21px] h-[21px] bg-white dark:bg-slate-200 absolute top-[2px] left-[2px] rounded-full shadow-md transform duration-300 ease-in-out"
          ></div>
        </label>
    </nav>
  </div>
</header>
